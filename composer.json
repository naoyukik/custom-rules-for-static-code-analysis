{
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^4.6",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "phpmd/phpmd": "@stable",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^4.27",
        "zebra-north/phpcs-short-types": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
